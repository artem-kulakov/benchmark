= form_for @industry_indicator do |f|
  - if @industry_indicator.errors.any?
    #error_explanation
      %h2= "#{pluralize(@industry_indicator.errors.count, "error")} prohibited this industry_indicator from being saved:"
      %ul
        - @industry_indicator.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :industry
    = f.select :industry_id, options_from_collection_for_select(@industries, :id, :title, @industry_indicator.industry_id)
  .field
    = f.label :indicator
    = f.select :indicator_id, options_from_collection_for_select(@indicators, :id, :title, @industry_indicator.indicator_id)
  .actions
    = f.submit 'Save'
