= form_for @industry do |f|
  - if @industry.errors.any?
    #error_explanation
      %h2= "#{pluralize(@industry.errors.count, "error")} prohibited this industry from being saved:"
      %ul
        - @industry.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.fields_for :industry_titles, @industry.industry_titles.where(user_id: current_user.id) do |ff|
      = ff.text_field :title
      = ff.hidden_field :user_id, :value => current_user.id
  .actions
    = f.submit 'Save'
