= form_for @industry do |f|
  - if @industry.errors.any?
    #error_explanation
      %h2= "#{pluralize(@industry.errors.count, "error")} prohibited this industry from being saved:"
      %ul
        - @industry.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title, :value => params[:title]
    = f.hidden_field :user_id, :value => current_user.id
    = f.hidden_field :initial_id, :value => params[:initial_id]
  .actions
    = f.submit 'Save'
