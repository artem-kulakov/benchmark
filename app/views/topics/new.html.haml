.page-header
  %h3 New topic

= form_for @topic, html: {class: "form-horizontal"} do |f|
  = render 'shared/error_messages', object: f.object
  
  .form-group
    .col-sm-6
      = f.text_field :title, placeholder: 'Title', class: "form-control"
  
  .form-group
    .col-sm-6
      = f.text_area :content, placeholder: 'Compose new topic', class: "form-control"
  
  .form-group
    .col-sm-3
      = f.submit 'Post', class: 'btn btn-success'
