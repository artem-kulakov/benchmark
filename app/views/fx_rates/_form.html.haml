= form_for @fx_rate do |f|
  - if @fx_rate.errors.any?
    #error_explanation
      %h2= "#{pluralize(@fx_rate.errors.count, "error")} prohibited this fx_rate from being saved:"
      %ul
        - @fx_rate.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :day
    = f.text_field :day
  .field
    = f.label :currency
    = f.text_field :currency
  .field
    = f.label :rate
    = f.text_field :rate
  .actions
    = f.submit 'Save'
