= form_for @industry_title do |f|
  - if @industry_title.errors.any?
    #error_explanation
      %h2= "#{pluralize(@industry_title.errors.count, "error")} prohibited this industry_title from being saved:"
      %ul
        - @industry_title.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title, :value => params[:title]
    
    = f.hidden_field :industry_id, :value => params[:industry_id]

    = f.hidden_field :user_id, :value => current_user.id
  .actions
    = f.submit 'Save'
